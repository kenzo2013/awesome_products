<div class="row">
	<h1>PRODUCTS LIST</h1>
</div>

<div class="card-deck">
	<% @products.each do |product| %>
		<div class="card">
			<%= image_tag(product.attachments.first.image.url(:medium), class: "card-img-top", alt: "Card image cap") %>
			<div class="card-body">
				<h5 class="card-title"><%= link_to format_name(product.name), product_path(product) %></h5>
				<p class="card-text"><%= product.description.truncate(100) %></p>
			</div>
			<div class="card-footer">
				<small class="text-muted"> <%=link_to 'Details', product_path(product) %></small>
			</div>
		</div>
	<% end %>
</div>
