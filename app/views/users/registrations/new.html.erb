<div class="col-md-6 offset-md-3">
	<div class="row shadow p-3 mb-5 bg-white rounded main">
		<div class="row header">
			<h2>Sign up</h2>
		</div>
		<div class="row">
			<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
				<div class="field">
					<%= f.input :email, placeholder: 'Email', label: false, autofocus: true, autocomplete: "email" %>
				</div>
				<div class="field">
					<%= f.input :password, placeholder: 'Password', label: false, aautocomplete: "new-password" %>
				</div>
				<div class="field">
					<%= f.input :password_confirmation, placeholder: 'Password confirmation', label: false, aautocomplete: "new-password" %>
				</div>
				<div class="col-md-4 offset-md-4">
					<div class="actions">
						<%= f.button :submit, "Sign up", class: "btn btn-primary" %>
					</div>
				</div>
				
				<%= render "users/shared/links" %>
			<% end %>
		</div>
	</div>
</div>

